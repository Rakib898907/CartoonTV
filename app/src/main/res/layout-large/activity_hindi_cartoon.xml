<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hindibanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HindiCartoon">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/jhjjkl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/hindiimagebt"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/hindivideoBt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/videob" />


        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:text=" dddd dddd dd dd  dddd dddd ddd dd ddd dddd dd d ddddd dd  "
        android:textColor="#111"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:text="Catagory : "

            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/catagorytext"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="abc bhhhh hujjhh hjjhh"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="italic" />



        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sharee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:drawableRight="@drawable/share"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/black"
                android:textSize="38sp"
                android:textStyle="italic" />


        </LinearLayout>



    </LinearLayout>
